   <url>
      <update label="Erlide main update site" url="http://erlide.org/update/"/>
   </url>

   <requires>
      <import plugin="org.eclipse.core.filesystem"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.erlide.core" version="0.7.0" match="greaterOrEqual"/>
      <import plugin="org.erlide.kernel.common" version="0.7.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.osgi.services"/>
      <import plugin="com.google.guava" version="11.0.1" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.runtime" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.resources" version="3.6.1" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.filesystem" version="1.3.1" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="org.erlide.core"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.erlide.jinterface"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.erlide.kernel.builder"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.erlide.kernel.common"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.erlide.kernel.debugger"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.erlide.kernel.ide"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.erlide.libs"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="com.google.guava"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
