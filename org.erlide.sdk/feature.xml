is available from http://www.eclipse.org/legal/epl-v10.html
   </license>

   <url>
      <update label="Erlide main update site" url="http://erlide.org/update/"/>
   </url>

   <requires>
      <import plugin="org.junit4"/>
      <import plugin="org.erlide.testing.libs" version="0.8.8" match="greaterOrEqual"/>
      <import plugin="org.erlide.jinterface" version="0.6.0" match="greaterOrEqual"/>
      <import plugin="org.erlide.libs" version="1.1.3" match="greaterOrEqual"/>
      <import plugin="org.junit4" version="4.0.0" match="greaterOrEqual"/>
      <import plugin="org.erlide.ui" version="0.6.0" match="compatible"/>
      <import plugin="org.erlide.core" version="0.7.0" match="greaterOrEqual"/>
      <import feature="org.erlide" version="0.10.1.qualifier"/>
      <import plugin="org.erlide.core" version="0.14.0" match="greaterOrEqual"/>
      <import plugin="org.erlide.test_support"/>
   </requires>

   <plugin
         id="org.erlide.core.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

   <plugin
         id="org.erlide.jinterface.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

   <plugin
         id="org.erlide.ui.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

   <plugin
         id="org.erlide.kernel.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.erlide.testing.libs"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.erlide.test_support.tests"
         download-size="0"
         install-size="0"
         version="0.0.0"
         fragment="true"
         unpack="false"/>

   <plugin
         id="org.erlide.testing"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

</feature>
